<div class="container mt-4">
  <div class="row">
    <div class="col-6 m-auto">
      <div class="flat-form">
        <h1>Edit supplier</h1>
        <div class="mt-3">
          <%= render "form", supplier: @supplier, label: "confirm edit" %>
					<%= link_to "Delete",
					supplier_path(@supplier),
					data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to remove #{@supplier.name}?"}
					%>
        </div>
      </div>
    </div>
  </div>
</div>
