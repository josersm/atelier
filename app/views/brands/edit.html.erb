<div class="container mt-4">
  <div class="row">
    <div class="col-6 m-auto">
      <div class="flat-form">
        <h1>Edit brand</h1>
        <div class="mt-3">
          <%= render "form", brand: @brand, label: "confirm edit" %>
					<%= link_to "Delete",
					brand_path(@brand),
					data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to remove #{@brand.company_name}?"}
					%>
        </div>
      </div>
    </div>
  </div>
</div>
